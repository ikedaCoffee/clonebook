<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-1">
    <h2>パスワードを変更する</h2>
    <p><%= image_tag "top-logo.png", size: "256x256" %></p>
    <p><%= alert %></p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

