<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
    <% @users.each do |user| %>
      <% unless current_user.id == user.id %>
        <%= link_to user_path(user) do %>
          <p>
            <span class="index-profile-image"><%= profile_img(user) %></span>
            <%= user.name %>
          </p>
        <% end %>
        <p><%= render 'follow_form', user: user %></p>
        <br>
      <% end %>
    <% end %>
  </div>
</div>