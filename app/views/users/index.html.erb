<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
    <% @users.each do |user| %>
      <% unless current_user.id == user.id %>
        <%= link_to user_path(user) do %>
          <p>
            <span class="index-profile-image"><%= profile_img(user) %></span>
            <%= user.name %>
          </p>
        <% end %>
        <p><%= render partial: 'follow_form', locals: {user: user} if signed_in? %></p>
        <p><%= link_to " メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post", class: "fa fa-commenting-o" %></p>
        <br>
      <% end %>
    <% end %>
  </div>
</div>