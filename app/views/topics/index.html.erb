<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p><%= notice %><%= alert %></p>
    <h1>投稿一覧</h1>
    <p><%= link_to "投稿を作成", new_topic_path, class: "btn btn-default btn-sm" %></p>
    <% @topics.each do |topic| %>
    <div class="row">
      <p>
        <span class="index-profile-image"><%= profile_img(topic.user) %></span>
        <%= topic.user.name %>が投稿
      </p>
      <h4><strong><%= topic.title %></strong></h4>
      <% if topic.image? %>
        <br>
        <span class="index-images"><%= image_tag(topic.image) %></span>
        <br><br>
      <% end %>
      <p><%= topic.content %></p>
      <%= link_to "編集", edit_topic_path(topic.id), class: "btn btn-default btn-sm" %>
      <%= link_to "削除", topic_path(topic.id), method: :delete, data: {confirm: "本当に削除してよいですか？"}, class: "btn btn-default btn-sm" %>
    </div>
    <% end %>
  </div>
</div>