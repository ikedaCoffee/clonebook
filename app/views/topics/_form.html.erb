<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= @topic.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>タイトル</p>
  <%= f.text_field :title, class: "form-control" %>
  <br>
  <% if @topic.image? %>
    <p><%= image_tag @topic.image %></p>
  <% else %>
    <p>写真</p>
  <% end %>
  <%= f.file_field :image, class: "btn btn-default btn-block" %>
  <%= f.hidden_field :image_cache %>
  <br>
  <p>内容</p>
  <%= f.text_area :content, class: "form-control", rows: 10 %>
  <br>
  <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
<% end %>

<%= link_to " 投稿一覧へ", topics_path, class: "fa fa-newspaper-o" %>